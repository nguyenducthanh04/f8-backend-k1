<style>
  .a-link {
    margin-left: 500px;
  }
</style>
<h1>Đăng nhập hệ thống</h1>
<%- msg.length ? `
<div class="alert alert-${msgType}">${msg}</div>
`: '';%> <%- success.length ? `
<div class="alert alert-success">${success}</div>
` : "" %>
<form action="" method="post">
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="email"
      name="email"
      class="form-control"
      placeholder="Email...."
      required
    />
  </div>
  <div class="mb-3">
    <label for="">Mật khẩu</label>
    <input
      type="password"
      name="password"
      class="form-control"
      placeholder="Mật khẩu...."
      required
    />
  </div>
  <div class="d-grid">
    <button type="submit" class="btn btn-primary">Đăng nhập</button>
  </div>
  <p><a class="a-link" href="/auth/forget">Quên mật khẩu</a></p>
</form>
